{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@custom-types": [
        "./types/index"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@factories/*": [
        "./factories/*"
      ],
      "@transform/*": [
        "./transform/*"
      ],
      "@transform": [
        "./transform/index"
      ]
    }
  },
  "include": ["src"]
}
